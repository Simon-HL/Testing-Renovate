{
  "extends": [
    "config:base",
    "group:all",
    "schedule:daily"
  ],
  "assigneesFromCodeOwners": true,
  "assigneesSampleSize": 1,
  "separateMinorPatch": true,
  "git-submodules": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchDatasources": ["git-tags", "github-tags"],
      "matchPackagePatterns": ["*"],
      "enabled": true
    }
  ]
}